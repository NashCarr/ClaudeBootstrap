<!-- ** BEGIN Addresses AREA -->
<div class="callout" id="PlacePhones">
    <div class="top-bar">
        <div class="top-bar-title">
            <ul class="menu">
                <li>
                    @Html.Label("Addresses", "Addresses")
               </li>
            </ul>
        </div>
        <div class="top-bar-right">
            <ul class="menu">
                <li>
                    <a class="small-text-label columns" data-bind="visible: !placeUseMailingforShipping(), click: PlaceAddressView.Shipping" href="">Shipping</a>
                </li>
                <li>
                    <a class="small-text-label columns" data-bind="visible: !placeUseMailingforShipping(), click: PlaceAddressView.Mailing" href="">Mailing</a>
                </li>
            </ul>
        </div>
    </div>
    <div>
        <div data-bind="visible: IsPlaceMailingAddressVisible">
            @{ Html.RenderPartial("Place/Addresses/MailingAddress"); }
        </div>
        <div data-bind="visible: IsPlaceShippingAddressVisible">
            @{ Html.RenderPartial("Place/Addresses/ShippingAddress"); }
        </div>
    </div>
</div>
<!-- ** END Addresses AREA -->