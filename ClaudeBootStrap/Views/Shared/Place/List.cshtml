<!-- BEGIN GRID AREA -->
<div class="table-row small-12 columns" id="itemslist">
    <table class="tabled" id="datatable">

        <thead class="light">
        <tr>
            <th class="pdsa-action-button-area" data-bind="click: ManageSort.Change(0), disable: IsListAreaVisible">Edit</th>
            <th data-bind="click: ManageSort.Change(1)" style="display: none">PlaceId</th>
            <th data-bind="click: ManageSort.Change(1)" style="display: none">Order</th>
            <th data-bind="click: ManageSort.Change(2)">Name</th>
            <th data-bind="click: ManageSort.Change(3)">Division</th>
            <th data-bind="click: ManageSort.Change(4)">Department</th>
            <th class="listcentered" data-bind="click: ManageSort.Change(5)">TimeZone</th>
            <th class="listcentered" data-bind="click: ManageSort.Change(6)">Country</th>
            <th class="pdsa-action-button-area" data-bind="click: ManageSort.Change(0), disable: IsListAreaVisible">Delete</th>
        </tr>
        </thead>
        <tbody data-bind="foreach: filteredItems()" id="items">
        <tr id="itemrow">
            <td class="listcentered" id="edit">
                <a class="button small blue-2" data-bind="click: $parent.PlaceEdit" href="#">
                    Select
                </a>
            </td>
            <td class="listcentered" data-bind="text: PlaceId" id="placeid" style="display: none"></td>
            <td class="listcentered" data-bind="text: DisplayOrder" id="order" style="display: none"></td>
            <td class="ui-priority-secondary" data-bind="text: Name" id="name"></td>
            <td class="ui-priority-secondary" data-bind="text: Division" id="division"></td>
            <td class="ui-priority-secondary" data-bind="text: Department" id="department"></td>
            <td class="listcentered" data-bind="text: TimeZoneName" id="timezonename"></td>
            <td class="listcentered" data-bind="text: CountryName" id="country"></td>
            <td class="listcentered" id="delete">
                <a class="button small blue-2" data-bind="click: $parent.RemoveItem.Validate.bind($data)" href="#" type="button">
                    Delete
                </a>
            </td>
        </tr>
        </tbody>

    </table>
</div>
<!-- END GRId AREA -->