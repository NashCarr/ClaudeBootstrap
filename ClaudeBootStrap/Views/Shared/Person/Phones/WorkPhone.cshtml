<!-- ** BEGIN Work Phone AREA -->
<form>
    <div class="row">
        <div class="small-3 columns">
            <label>
                Work Number
                @Html.TextBox("WorkNumber", "", new { @class = "form-control", data_bind = "value:personworkphonenumber" })
            </label>
        </div>
        <div class="small-3 columns">
            <label>
                Extension
                @Html.TextBox("WorkExtension", "", new { @class = "form-control", data_bind = "value:personworkextension" })
            </label>
        </div>
        <div class="small-3 columns">
            <label>
                Country
                <select class="form-control" data-bind="value: personworkcountry, options: countries, optionsText: 'Text', optionsValue: 'Value', optionsCaption: 'Choose...'"></select>
            </label>
        </div>
        <div class="small-3 columns">
            <label class="center">
                Is Primary<br />
                <input data_bind="checked: PersonPrimaryPhone.workisprimary, event: { change: PersonPrimaryPhone.Work }" type="checkbox">
            </label>
        </div>
    </div>
</form>
<!-- ** END Work Phone AREA -->