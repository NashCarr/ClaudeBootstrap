<!-- ** BEGIN Phones AREA -->
<div class="callout" id="PlacePhones">
    <div class="top-bar">
        <div class="top-bar-title">
            <ul class="menu">
                <li>
                    @Html.Label("phonesheader", new { data_bind = "text: phoneHeader" })
                </li>
            </ul>
        </div>
        <div class="top-bar-right">
            <ul class="menu">
                <li>
                    <a class="small-text-label columns" data-bind="click: PersonPhoneView.Home" href="">Home</a>
                </li>
                <li>
                    <a class="small-text-label columns" data-bind="click: PersonPhoneView.Cell" href="">Cell</a>
                </li>
                <li>
                    <a class="small-text-label columns" data-bind="click: PersonPhoneView.Work" href="">Work</a>
                </li>
                <li>
                    <a class="small-text-label columns" data-bind="click: PersonPhoneView.Fax" href="">Fax</a>
                </li>
                <li>
                    <a class="small-text-label columns" data-bind="click: PersonPhoneView.Primary" href="">Primary</a>
                </li>
            </ul>
        </div>
    </div>
    <div>
        <div data-bind="visible: IsPersonHomePhoneVisible">
            @{ Html.RenderPartial("Person/Phones/HomePhone"); }
        </div>
        <div data-bind="visible: IsPersonCellPhoneVisible">
            @{ Html.RenderPartial("Person/Phones/CellPhone"); }
        </div>
        <div data-bind="visible: IsPersonWorkPhoneVisible">
            @{ Html.RenderPartial("Person/Phones/WorkPhone"); }
        </div>
        <div data-bind="visible: IsPersonFaxPhoneVisible">
            @{ Html.RenderPartial("Person/Phones/FaxPhone"); }
        </div>
    </div>
</div>
<!-- ** END Phones AREA -->