<!-- ** BEGIN Home Phone AREA -->
<form>
    <div class="row">
        <div class="small-4 columns">
            <label>
                Home Number
                @Html.TextBox("HomeNumber", "", new { @class = "form-control", data_bind = "value:personhomephonenumber" })
            </label>
        </div>
        <div class="small-4 columns">
            <label>
                Country
                <select class="form-control" data-bind="value: personhomecountry, options: countries, optionsText: 'Text', optionsValue: 'Value', optionsCaption: 'Choose...'"></select>
            </label>
        </div>
        <div class="small-4 columns">
            <label class="center">
                Is Primary<br />
                <input data_bind="checked: PersonPrimaryPhone.homeisprimary, event: { change: PersonPrimaryPhone.Home }" type="checkbox">
            </label>
        </div>
    </div>
</form>
<!-- ** END Home Phone AREA -->