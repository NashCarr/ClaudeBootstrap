<!-- ** BEGIN Mailing Address AREA -->
<form>
    <div class="row">
        <div class="small-1 columns">
            <div class="form-group">
                @Html.Label("Mailing", "Mailing")
            </div>
        </div>
        <div class="small-4 columns end">
            <div class="form-group">
                <input data-bind="checked: personUseMailingforShipping, event: { change: DefaultPersonShipping.Set }" name="issystem" type="checkbox">
                @Html.Label("SameAddress", "Use For Shipping")
            </div>
        </div>
    </div>
    <div class="row">
        <div class="small-4 columns">
            <label>
                Address1
                @Html.TextBox("Address1", "", new { @class = "form-control", data_bind = "value:personmailingaddress1" })
            </label>
        </div>
        <div class="small-4 columns">
            <label>
                Address2
                @Html.TextBox("Address1", "", new { @class = "form-control", data_bind = "value:personmailingaddress2" })
            </label>
        </div>
        <div class="small-4 columns">
            <label>
                Postal Code
                @Html.TextBox("Postal", "", new { @class = "form-control", data_bind = "value:personmailingpostalcode" })
            </label>
        </div>
    </div>
    <div class="row">
        <div class="small-4 columns">
            <label>
                City
                @Html.TextBox("City", "", new { @class = "form-control", data_bind = "value:personmailingcity" })
            </label>
        </div>
        <div class="small-4 columns">
            <label>
                State/Province
                <select class="form-control" data-bind="value: personmailingstateprovinceid, options: statesprovinces, optionsText: 'Text', optionsValue: 'Value', optionsCaption: 'Choose...'"></select>
            </label>
        </div>
        <div class="small-4 columns">
            <label>
                Country
                <select class="form-control" data-bind="value: personmailingcountry, options: countries, optionsText: 'Text', optionsValue: 'Value', optionsCaption: 'Choose...'"></select>
            </label>
        </div>
    </div>
</form>
<!-- ** END Mailing Address AREA -->